#!/bin/sh
case $1 in
	up)   wpctl set-mute @DEFAULT_AUDIO_SINK@ 0 && wpctl set-volume -l 2.0 @DEFAULT_AUDIO_SINK@ 5%+ ;;
	down) wpctl set-mute @DEFAULT_AUDIO_SINK@ 0 && wpctl set-volume -l 2.0 @DEFAULT_AUDIO_SINK@ 5%- ;;
	mute) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
esac
VOLUME=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | tr -dc '0-9' | sed 's/^0\{1,2\}//')
send_notification() {
	if [ "$1" = "mute" ]; then
		TEXT="MUTED";
	else
		TEXT="    ${VOLUME}";
	fi
	dunstify -a "Volume" -r 9993 -h int:value:"$VOLUME" "$TEXT" -t 2000
}
case $1 in
	mute)
		case "$(wpctl get-volume @DEFAULT_AUDIO_SINK@)" in
			*MUTED* ) send_notification mute;;
			*       ) send_notification;;
		esac;;
	*)
		send_notification;;
esac
