#!/bin/bash
# This script is the SUDO_ASKPASS variable, meaning that it will be used as a
# password prompt if needed.
user=$(whoami)
faillock --user $user --reset;
pass() {
	wmenu -P -p "$1" <&-
}
run=$(pass "$1")
if [[ -z "$run" ]]; then
	dunstify "Password input was empty." -u critical -t 3000 -r 0721 &
	exit 1
fi
echo "$run"
exit 0
